
#include <stdio.h>

//Largest and smallest number of the array
int main() {
   int ar[5],max,min;
   printf("Enter the array values:");
   for(int i=0;i<5;i++){
       scanf("%d",&ar[i]);
   }
   max=ar[0];
   min=ar[0];
   
   for(int j=0;j<5;j++){
       if(ar[j]>max){
           max=ar[j];
       }
   }
   
   for(int k=0;k<5;k++){
       if(ar[k]<min){
           min=ar[k];
       }
   }
   
   printf("the largest number:%d\n",max);
   printf("the smallest number:%d",min);
}





